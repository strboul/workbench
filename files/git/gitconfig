[core]
	editor = "vim -u DEFAULTS -c ':normal $'"
	excludesfile = ~/.gitignore
	autocrlf = input
[push]
	default = simple
[pull]
	ff = only
[user]
	useConfigOnly = true
[diff]
	colorMoved = default
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
	keepBackup = false
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[commit]
	verbose = true
[credential]
	helper = cache
[init]
	templatedir = ~/.config/git/git_templates
	defaultBranch = master
[log]
	showSignature = true
[gpg]
	format = ssh
[commit]
	gpgsign = true
[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers
