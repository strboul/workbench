{
  // --- general settings
  "coc.preferences.extensionUpdateCheck": "weekly",

  // --- diagnostic
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " â–‡ ",
  "diagnostic.checkCurrentLine": false,
  "diagnostic.messageTarget": "echo",
  "diagnostic.errorSign": "âŠ˜",
  "diagnostic.warningSign": "âš ",
  "diagnostic.infoSign": "ðŸ›ˆ",

  // --- python
  "python.linting.mypyEnabled": true,
  "python.venvPath": ".venv",
  // "pyright.disableDiagnostics": true,

  // prettier
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "html",
    "css",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "go"
  ],

  // don't have completion item selected by default
  "suggest.noselect": true,

  // source: https://github.com/neoclide/coc.nvim/blob/49132383d5a8016d1d47d60d47e495b2fbe89b1a/doc/coc.txt#L339
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "constructor": "\uf0ad",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },

  // snippets
  "snippets.ultisnips.pythonPrompt": false,

  // disable inline hints on all filetypes as they are too noisy now
  "inlayHint.filetypes": []
}

