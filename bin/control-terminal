#!/usr/bin/env bash

check_truecolor() {
  # Reference: https://github.com/termstandard/colors
  awk 'BEGIN {
    s="/\\/\\/\\/\\/\\"; s=s s s s s s s s;
    for (colnum = 0; colnum<77; colnum++) {
      r = 255-(colnum*255/76);
      g = (colnum*510/76);
      b = (colnum*255/76);
      if (g>255) g = 510-g;
      printf "\033[48;2;%d;%d;%dm", r,g,b;
      printf "\033[38;2;%d;%d;%dm", 255-r,255-g,255-b;
      printf "%s\033[0m", substr(s,colnum+1,1);
    }
    printf "\n";
  }'
  echo -e "----------\nYou should see a continuous gradient."
}

check_font_styles() {
  echo -e \
    "Normal" \
    "\x1b[1mbold\x1b[22m" \
    "\x1b[2mdim\x1b[22m" \
    "\x1b[3mitalic\x1b[23m" \
    "\x1b[4munderline\x1b[0m" \
    "\x1b[4:2mdouble-underline\x1b[4:0m" \
    "\x1b[9mstrikethrough\x1b[0m" \
    "\x1b[7mreverse\x1b[27m"
  echo -e "----------\nYou should see different font styles."
}

main() {
  check_truecolor
  echo -e "\n"
  check_font_styles
}

main
