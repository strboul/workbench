#!/usr/bin/env bash

# Run neovim in container (with podman)
#

set -euo pipefail

source "$HOME"/dotfiles/bin/__utils/utils.sh

HOST_PWD="$(pwd)"
HOST_USER="$(id -un)"
ARGS="$*"

ID="mynvim"
IMAGE_TAG="localhost/mynvim"

is_image_exist() {
  podman image inspect "$IMAGE_TAG" &> /dev/null
}

build_image() {
  podman build -t "$IMAGE_TAG" "$HOME/dotfiles/files/nvim"
}

create_volume() {
  podman volume create "$ID"
}

create_container() {
  local command
  if [[ "${#ARGS}" -gt 0 ]]; then
    command="$IMAGE_TAG $ARGS"
  else
    command="$IMAGE_TAG"
  fi
  podman run -it \
    --volume "$HOME/.gitconfig:/root/.gitconfig" \
    --volume "$HOME/.gitignore:/root/.gitignore" \
    --volume "$HOME/dotfiles/files/nvim/init.lua:/root/.config/nvim/init.lua" \
    --volume "$HOME/dotfiles/files/nvim/lua:/root/.config/nvim/lua" \
    --volume "$HOME/dotfiles/files/nvim/after:/root/.config/nvim/after" \
    --volume "$HOME/dotfiles/files/nvim/ftdetect:/root/.config/nvim/ftdetect" \
    --volume "$HOME/dotfiles/files/nvim/syntax:/root/.config/nvim/syntax" \
    --volume "$HOME/dotfiles/files/nvim/coc-settings.json:/root/.config/nvim/coc-settings.json" \
    --volume "$HOME/dotfiles/files/nvim/snippets:/root/.config/coc/ultisnips" \
    --volume "$PWD:/root/cwd" \
    --volume "$ID:/root" \
    --env "host_PWD=$HOST_PWD" \
    --env "host_USER=$HOST_USER" \
    $command
}

cleanup_exited_containers() {
  # shellcheck disable=SC2046 # intended splitting
  podman rm $(podman ps -aq -f status=exited) &> /dev/null &
}

on_exit() {
  cleanup_exited_containers
}

main() {
  if ! is_image_exist; then
    utils__log__info "image not found. building..."
    build_image
    create_volume
  fi
  trap on_exit EXIT
  create_container
}

main
