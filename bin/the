#!/usr/bin/env bash

source "$HOME"/dotfiles/zsh/utils.sh

# Search a term in the TheFreeDictionary
#
# Usage: the "word to search"
#
TERM="$1"

check_term_provided() {
  [ -z "$TERM" ] && utils__err_exit "term is missing."
}

# replace all blanks
term_to_link_query() {
  echo "${1// /+}"
}

website_opener() {
  path=$1
  if [[ "$OSTYPE" == "darwin"* ]]; then
    open "$path"
  elif [[ "$OSTYPE" == "linux"* ]]; then
    eval "$(printf "xdg-open 2>/dev/null %s" "$path")"
  else
    utils__err_exit "Platform not supported."
  fi
}

get_link() {
  printf "%s%s" "https://www.thefreedictionary.com/" "$(term_to_link_query "$TERM")"
}

main() {
  check_term_provided
  link="$(get_link)"
  utils__log__success "opened browser \"$link\""
  website_opener "$link"
}

main
