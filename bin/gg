#!/usr/bin/env bash

# fzf git-log (interactive):
# https://gist.github.com/junegunn/f4fca918e937e6bf5bad

source "$HOME"/dotfiles/zsh/utils.zsh


clipboard_copy() {
  if [[ "$OSTYPE" == "darwin"* ]]; then
    pbcopy
  elif [[ "$OSTYPE" == "linux"* ]]; then
    xclip
  else
    err_exit "Platform not supported."
  fi
}

main() {
  check_file_or_dir_exists ".git" "No git repository found."
  local gitlog=(
    git log \
      --graph \
      --color=always \
      --format='%C(blue)%h%Creset%C(magenta)%d%Creset %C(bold)%s%Creset %C(yellow)<%an> %C(cyan)(%ci)%Creset' \
      --abbrev-commit \
      --date=iso
  )
  local fzf=(
    fzf
      --ansi --no-sort --reverse --tiebreak=index
      --header="<Enter>: view, q: quit view | CTRL-y: yank hash, CTRL-c | ESC: exit"
      --bind "enter:execute:
          (grep -o '[a-f0-9]\{7\}' | head -1 |
          xargs -I % sh -c 'git show --color=always % | less -R') << 'FZF-EOF'
            {}
            FZF-EOF"
      --bind "ctrl-y:execute:(grep -o '[a-f0-9]\{7\} ' | head -1 | $clipboard_copy)"
  )
  "${gitlog[@]}" | "${fzf[@]}"
}


main

# vim: sw=2 ts=2 et ft=sh
