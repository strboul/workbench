[core]
	editor = "nvim -u DEFAULTS"
	excludesfile = ~/.gitignore
	autocrlf = input
[push]
	default = simple
[pull]
	ff = only
[user]
	useConfigOnly = true
[diff]
	colorMoved = default
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
	keepBackup = false
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
# git-cola
[cola]
	spellcheck = true
[commit]
	verbose = true
